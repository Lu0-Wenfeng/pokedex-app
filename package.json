{
  "name": "pokedex-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rsuite/icons": "^1.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.1",
    "rsuite": "^5.83.3",
    "rxjs": "^7.8.2",
    "sass": "^1.90.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "prebuild": "rimraf build && pnpm run quality",
    "start": "rsbuild dev",
    "build": "rsbuild build",
    "preview": "rsbuild preview",
    "lint": "biome lint src/",
    "lint-fix": "biome check --write src/",
    "type-check": "tsc --noEmit",
    "format": "biome format --write src/",
    "format-check": "biome format src/",
    "quality": "pnpm run type-check && pnpm run lint && pnpm run format-check",
    "quality-fix": "pnpm run type-check && pnpm run lint-fix && pnpm run format"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@rsbuild/core": "^1.4.15",
    "@rsbuild/plugin-less": "^1.3.2",
    "@rsbuild/plugin-react": "^1.3.5",
    "@rsbuild/plugin-sass": "^1.3.5",
    "@rsbuild/plugin-svgr": "^1.2.2",
    "@rsbuild/plugin-type-check": "^1.2.4",
    "@types/node": "^24.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
